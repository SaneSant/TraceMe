<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profileScreen"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/head_bg"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="45dp"
                android:scaleType="centerCrop"
                android:src="@drawable/passenger" />

            <TextView
                android:id="@+id/displayuser1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_b"
                android:textColor="#fff"
                android:textSize="15sp" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="45dp">
        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_baseline_email_24"
                app:tint="@color/purple_700" />

            <TextView
                android:id="@+id/displayemail"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:fontFamily="@font/r_b"
                android:layout_height="wrap_content"
                android:textColor="#808080"
                android:paddingLeft="17dp"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_baseline_phone_24"
                app:tint="@color/purple_700" />


            <TextView
                android:id="@+id/displayuser"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:fontFamily="@font/r_b"
                android:layout_height="wrap_content"
                android:textColor="#808080"
                android:paddingLeft="17dp"
                android:text=""/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/logout"
        android:textColor="#fff"
        android:layout_marginTop="35dp"
        android:backgroundTint="#2a9d8f"
        android:layout_gravity="center_horizontal"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Logout"
        android:drawableLeft="@drawable/ic_baseline_login_24"
        android:drawableTint="@color/white"
        android:fontFamily="@font/r_b"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="---------- OR ----------"/>






    <TextView
        android:id="@+id/busowner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Are you a private bus owner?"
        android:fontFamily="@font/poppins_b"
        android:layout_margin="20dp"
        android:drawableLeft="@drawable/ic_baseline_directions_bus_24"
        android:drawableTint="@color/purple_700"
        android:textColor="@color/purple_700"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="30dp"
            android:src="@drawable/share"/>



        <ImageView
            android:id="@+id/rate"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="30dp"

            android:src="@drawable/star"/>

        <ImageView
            android:id="@+id/contact"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="30dp"

            android:src="@drawable/chatca"/>


    </LinearLayout>


    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="50dp"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-7873916221398523/9415802587">

    </com.google.android.gms.ads.AdView>








</LinearLayout>